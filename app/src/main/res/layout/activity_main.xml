<com.pkmmte.techdissected.view.PkDrawerLayout
		android:id="@+id/drawer_layout"
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">

		<android.support.design.widget.AppBarLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

			<android.support.v7.widget.Toolbar
					android:id="@+id/toolbar"
					android:layout_width="match_parent"
					android:layout_height="?attr/actionBarSize"
					android:theme="@style/Theme.AppCompat"
					app:navigationIcon="@drawable/ic_toolbar_drawer"
					app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
					app:title="@string/app_name"
					app:titleMarginStart="16dp"/>
		</android.support.design.widget.AppBarLayout>

		<FrameLayout
				android:id="@+id/feedContainer"
				android:layout_width="match_parent"
				android:layout_height="match_parent"/>
	</LinearLayout>

	<ListView
			android:id="@+id/drawer_list"
			android:layout_width="@dimen/nav_drawer_width"
			android:layout_height="match_parent"
			android:layout_gravity="start"
			android:background="#19232D"
			android:clipToPadding="false"
			android:divider="#FF2f4154"
			android:dividerHeight="1dp"
			android:drawSelectorOnTop="false"
			android:footerDividersEnabled="false"
			android:headerDividersEnabled="false"
			android:listSelector="@drawable/selector_light_bounded"
			android:scrollbars="none"/>

</com.pkmmte.techdissected.view.PkDrawerLayout>