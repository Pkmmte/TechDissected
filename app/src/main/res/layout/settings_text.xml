<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/settings_spacing_horizontal"
        android:layout_marginRight="@dimen/settings_spacing_horizontal"
        android:ellipsize="end"
        android:fontFamily="sans-serif-condensed"
        android:maxLines="1"
        android:paddingTop="@dimen/settings_spacing"
        android:textColor="@color/text_primary"
        android:textSize="@dimen/settings_title" />

    <TextView
        android:id="@+id/txtDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/settings_spacing_horizontal"
        android:layout_marginRight="@dimen/settings_spacing_horizontal"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingBottom="@dimen/settings_spacing"
        android:textColor="@color/text_secondary"
        android:textSize="@dimen/settings_description" />

</LinearLayout>