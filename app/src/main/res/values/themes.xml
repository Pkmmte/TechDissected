<?xml version="1.0" encoding="utf-8"?>
<resources>
  <!-- Base application theme. -->
  <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
    <item name="android:homeAsUpIndicator">@drawable/ic_action_previous</item>
    <item name="android:actionOverflowButtonStyle">@style/ActionBar.Overflow</item>
    <item name="android:actionBarStyle">@style/ActionBar</item>
    <item name="android:actionBarItemBackground">@drawable/selector_action_overlay</item>
    <item name="android:actionBarWidgetTheme">@style/ActionBar.WidgetTheme</item>
    <item name="android:listPopupWindowStyle">@style/ActionBar.PopupMenu</item>
  </style>

  <!-- Translucent AB -->
  <style name="AppTheme.Translucent" parent="AppTheme">
    <item name="android:actionBarStyle">@style/TranslucentActionBar</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowActionBarOverlay">true</item>
  </style>

  <!-- Image Overlay -->
  <style name="Dialog.Fullscreen" parent="android:style/Theme.Holo.Dialog">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:padding">0dp</item>
    <item name="android:windowBackground">@color/transparent</item>
    <item name="android:windowNoTitle">true</item>
  </style>

</resources>