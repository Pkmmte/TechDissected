<resources>
  <!-- Main Action Bar Style -->
  <style name="ActionBar" parent="@android:style/Widget.Holo.ActionBar">
    <item name="android:background">@color/action_background</item>
    <item name="android:actionBarSize">@dimen/action_height</item>
    <item name="android:height">@dimen/action_height</item>
    <item name="android:titleTextStyle">@style/ActionBar.Title</item>
    <item name="android:subtitleTextStyle">@style/ActionBar.SubTitle</item>
  </style>

  <style name="ActionBar.WidgetTheme" parent="android:style/Theme.Holo">
    <item name="android:popupMenuStyle">@style/ActionBar.PopupMenu</item>
    <item name="android:dropDownListViewStyle">@style/ActionBar.DropDownListView</item>
  </style>

  <style name="ActionBar.PopupMenu" parent="android:style/Widget.Holo.ListPopupWindow">
    <item name="android:popupBackground">@drawable/menu_dropdown_panel</item>
  </style>

  <style name="ActionBar.DropDownListView" parent="@android:style/Widget.Holo.ListView.DropDown">
    <item name="android:listSelector">@drawable/selector_action_overlay</item>
    <item name="android:background">@color/action_background</item>
  </style>

  <style name="ActionBar.Title" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
    <item name="android:textColor">@color/white</item>
  </style>

  <style name="ActionBar.SubTitle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Subtitle">
    <item name="android:textColor">@color/white</item>
  </style>

  <style name="ActionBar.Overflow" parent="@android:style/Widget.Holo.ActionButton.Overflow">
    <item name="android:src">@drawable/ic_action_overflow</item>
  </style>

  <!-- Transparent Action Bar Style -->
  <style name="TranslucentActionBar" parent="@style/ActionBar">
    <item name="android:background">@color/transparent</item>
  </style>

  <!-- Custom ActionBar-PullToRefresh Header Style -->
  <style name="PTR.Header" parent="android:Widget">
    <item name="ptrHeaderHeight">@dimen/action_height</item>
    <item name="ptrProgressBarStyle">inside</item>
    <item name="ptrProgressBarColor">@color/brand_orange</item>
  </style>

  <!-- Tag Button Style -->
  <style name="Button.Tag" parent="@android:style/Widget.Button">
    <item name="android:layout_width" >wrap_content</item>
    <item name="android:layout_height" >wrap_content</item>
    <item name="android:background">@drawable/button_orange_raised</item>
    <item name="android:minHeight">0dp</item>
    <item name="android:minWidth">0dp</item>
    <item name="android:paddingBottom">8dp</item>
    <item name="android:paddingLeft">16dp</item>
    <item name="android:paddingRight">16dp</item>
    <item name="android:paddingTop">8dp</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:textSize">18sp</item>
  </style>
</resources>